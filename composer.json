{
    "name": "onix-systems-php/hyperf-auth",
    "type": "extension",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "An authentication extension for an application",
    "autoload": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OnixSystemsPHP\\HyperfAuth\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "96qbhy/hyperf-auth": "^3.0",
        "onix-systems-php/hyperf-actions-log": ">=1.1",
        "onix-systems-php/hyperf-socialite": "^1.1",
        "onix-systems-php/hyperf-core": ">=1.1",
        "hyperf/contract": "^3.0",
        "hyperf/guzzle": "^3.0",
        "hyperf/utils": "^3.0",
        "hyperf/session": "^3.0",
        "league/oauth1-client": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5|^5.0"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "OnixSystemsPHP\\HyperfAuth\\ConfigProvider"
        }
    }
}
